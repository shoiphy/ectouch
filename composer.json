{
    "name": "ectouch/ectouch",
    "description": "ECTouch E-Commerce Platform for PHP.",
    "keywords": ["ectouch", "b2c", "o2o", "shop", "mall", "wechat"],
    "homepage": "https://www.ectouch.cn/",
    "license": "GPL",
    "type": "project",
    "authors": [
        {
            "name": "carson",
            "email": "wanganlin@ecmoban.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ectouch/ectouch/issues?state=open",
        "forum": "http://www.ectouch.cn/forum/",
        "wiki": "http://www.ectouch.cn/wiki/",
        "source": "https://github.com/ectouch/ectouch"
    },
    "require": {
        "php": ">=7.0.0",
        "aliyuncs/oss-sdk-php": "^2.2",
        "fideloper/proxy": "~3.3",
        "jellybool/translug": "^2.0",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "mobiledetect/mobiledetectlib": "^2.8",
        "overtrue/easy-sms": "^0.0.9",
        "overtrue/pinyin": "^3.0",
        "overtrue/socialite": "^1.1",
        "overtrue/wechat": "^3.3",
        "phpoffice/phpexcel": "^1.8",
        "sentry/sentry": "^1.7",
        "workerman/phpsocket.io": "^1.1"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/constant.php",
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
